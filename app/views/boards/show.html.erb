<p id="notice"><%= notice %></p>

<p>
  <strong>タイトル:</strong>
  <%= @board.name %>
</p>

<p>
  <% @contents.each_with_index do |content, i| %>
    <p>
      <% str = (i + 1).to_s + " 名前 : " + content.user_name + " : " + content.created_at.to_s + ' ID: wwwaaaa' %>
      <%= str %><br>
      <%= content.post %>
    </p>
  <% end %>
</p>

<%= render 'post_form', content: @content %>

